{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/spec",
        "types": [
            "jasmine",
            "node"
        ],
        "paths": {
            "@core": [
                "projects/campaign/src/app/core/index"
            ],
            "@core/*": [
                "projects/campaign/src/app/core/*"
            ],
            "@shared": [
                "projects/campaign/src/app/shared/index"
            ],
            "@shared/*": [
                "projects/campaign/src/app/shared/*"
            ],
            "@app": [
                "projects/campaign/src/app/index"
            ],
            "@app/*": [
                "projects/campaign/src/app/*"
            ],
            "@env": [
                "projects/campaign/src/environments/environment"
            ],
            "@env/*": [
                "projects/campaign/src/environments/*"
            ]
        },
    },
    "files": [
        "src/test.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.spec.ts",
        "src/**/*.d.ts"
    ]
}